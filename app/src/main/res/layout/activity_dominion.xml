<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DominionActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="186dp"
        android:layout_height="287dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/btn_gold"
            android:layout_width="61dp"
            android:layout_height="95dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/gold"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/btn_silver"
            android:layout_width="61dp"
            android:layout_height="95dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/silber"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/btn_copper"
            android:layout_width="61dp"
            android:layout_height="95dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/kupfer" />

        <ImageButton
            android:id="@+id/btn_estate_H"
            android:layout_width="61dp"
            android:layout_height="95dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/herzogtum" />

        <ImageButton
            android:id="@+id/btn_estate_P"
            android:layout_width="61dp"
            android:layout_height="95dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/provinz" />

        <ImageButton
            android:id="@+id/btn_estate_A"
            android:layout_width="61dp"
            android:layout_height="95dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/anwesen" />

        <ImageButton
            android:id="@+id/btn_curse"
            android:layout_width="61dp"
            android:layout_height="95dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/fluch" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>