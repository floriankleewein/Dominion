<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="3"
    android:weightSum="3"

    tools:context="com.group7.dominion.GameFragment" >

    <ImageButton
        android:id="@+id/btn_gold"
        android:layout_width="96dp"
        android:layout_height="130dp"
        android:layout_row="0"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/gold"
        android:layout_rowWeight="1"/>

    <ImageButton
        android:id="@+id/btn_silver"
        android:layout_width="96dp"
        android:layout_height="130dp"
        android:layout_row="1"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/silber"
        android:layout_rowWeight="1"/>

    <ImageButton
        android:id="@+id/btn_copper"
        android:layout_width="96dp"
        android:layout_height="130dp"
        android:layout_row="2"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/kupfer"
        android:layout_rowWeight="1"/>

    <ImageButton
        android:id="@+id/btn_estate_H"
        android:layout_width="96dp"
        android:layout_height="130dp"
        android:layout_row="1"
        android:layout_column="1"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/herzogtum"
        android:layout_rowWeight="1"/>

    <ImageButton
        android:id="@+id/btn_estate_P"
        android:layout_width="96dp"
        android:layout_height="130dp"
        android:layout_row="0"
        android:layout_column="1"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/provinz"
        android:layout_rowWeight="1"/>

    <ImageButton
        android:id="@+id/btn_estate_A"
        android:layout_width="96dp"
        android:layout_height="130dp"
        android:layout_row="2"
        android:layout_column="1"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/anwesen"
        android:layout_rowWeight="1"/>
</GridLayout>
